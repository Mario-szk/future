<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerController"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/media_controller_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/media_controller_play_pause"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:src="@drawable/media_controller_stop"/>

    <TextView
        android:id="@+id/media_controller_time_current"
        style="@style/MediaController_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        tools:text="00:15:32"/>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/video_player_mute"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@drawable/media_controller_mute_on"/>

    <ImageView
        android:id="@+id/snapShot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:focusable="true"
        android:src="@drawable/media_controller_takesnap"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/video_player_scale"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:src="@drawable/media_controller_scale_full"/>
</LinearLayout>