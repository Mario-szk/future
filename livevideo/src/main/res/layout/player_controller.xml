<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/media_controller_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="6dp"
        android:src="@drawable/media_controller_start"/>

    <TextView
        android:id="@+id/media_controller_time_current"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        tools:text="00:15:32"/>

    <ImageView
        android:id="@+id/video_player_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:src="@drawable/media_controller_mute_on"/>

    <ImageView
        android:id="@+id/video_player_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:padding="6dp"
        android:src="@drawable/media_controller_scale_full"/>
</LinearLayout>