<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SignEditText" parent="@android:style/TextAppearance">
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">@color/blackPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/grayHint</item>
    </style>

    <style name="SignEditText.PhoneNum">
        <item name="android:textColorHint">@color/grayHint</item>
        <item name="textSize">16sp</item>
        <item name="textColor">@color/blackPrimary</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">13</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="SignEditText.Password">
        <item name="android:textColorHint">@color/grayHint</item>
        <item name="textSize">16sp</item>
        <item name="textColor">@color/blackPrimary</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">20</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="SignEditText.AuthCode">
        <item name="textSize">16sp</item>
        <item name="textColor">@color/blackPrimary</item>
        <item name="android:maxLength">6</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:digits">0123456789qwertyuioplkjhgfdsazxcvbnm</item>
    </style>

    <style name="PrimaryBigButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">13dp</item>
        <item name="android:textColor">@color/btn_text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryBigButton.Inverse">
        <item name="android:background">@drawable/btn_primary_inverse</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/btn_text_primary_inverse</item>
    </style>

    <style name="InputTitle">
        <item name="android:minWidth">70dp</item>
        <item name="android:textColor">@color/tv_input_title</item>
    </style>

    <style name="HomeListHeaderButton">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#262626</item>
    </style>

    <style name="OrderDetailItemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">65dp</item>
        <item name="android:textColor">#A8A8A8</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OrderDetailItemContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">#262626</item>
    </style>

    <!--关于我们界面的列表容器-->
    <style name="AboutAsEntryRelativeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!--关于我们界面的列表左边的文字-->
    <style name="AboutAsEntryLeftTextViewStyle">
        <item name="android:textColor">#262626</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--关于我们界面的列表左边的图片-->
    <style name="AboutAsEntryRightImageViewStyle">
        <item name="android:src">@drawable/ic_about_us_arrow_down</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--关于我们界面的列表点击后出现的详细信息-->
    <style name="AboutAsEntryBottomTextViewStyle">
        <item name="android:visibility">gone</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#323232</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--推广赚钱-->
    <style name="expandMakeMoneyTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--提现记录详情界面的右边的文字样式-->
    <style name="withDrawInfoRightText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#358cf3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--提现记录详情界面的左边文字的样式-->
    <style name="withDrawInfoLeftText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#358cf3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HomeFooterText">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:minWidth">68dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension" />
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float" />
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean" />
        <!-- Max view width that cannot beyond this -->
        <attr name="maxViewWidth" format="dimension" />
    </declare-styleable>
</resources>
