<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jnhyxx.html5.activity.LiveActivity">

    <com.jnhyxx.html5.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:customView="@layout/tb_live_program_dir"
        app:rightText="@string/live_right_title"
        app:rightTextColor="@android:color/white"
        app:rightTextSize="16sp"
        app:rightVisible="true"
        app:titleText="@string/live"/>

    <RelativeLayout
        android:id="@+id/liveLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/titleBar"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/teacherGuideLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_live_teacherhead"
            android:gravity="center">

            <com.jnhyxx.html5.view.CircularAnnulusImageView
                android:id="@+id/teacherHeadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_live_pic_head"
                app:borderColor="@android:color/white"
                app:borderWidth="1dp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow_live_angle_teacher_right"/>

        <TextView
            android:id="@+id/teacherGuideContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_live_tacher_guide"
            android:lineSpacingExtra="8dp"
            android:minHeight="60dp"
            android:padding="10dp"
            android:textColor="@color/blackPrimary"
            android:textSize="@dimen/min_text_size"
            android:text="老设计费哈萨克金凤凰刷卡机划分空间撒谎手机卡号放假快乐撒谎发空间撒"/>
    </LinearLayout>

    <com.jnhyxx.html5.view.SlidingTabLayout
        android:id="@+id/slidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liveLayout"
        android:background="@android:color/white"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/slidingTabLayout"/>

    <FrameLayout
        android:id="@+id/liveProgramDir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:visibility="gone"/>

</RelativeLayout>
