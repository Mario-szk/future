<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jnhyxx.html5.activity.account.SignInActivity">

    <include
        android:id="@+id/rlFailWarn"
        layout="@layout/common_fail_warn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/helpPhoneNumImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/login_icon_phone"/>

            <EditText
                android:id="@+id/phoneNum"
                style="@style/SignEditText.PhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/helpPhoneNumImage"
                android:hint="@string/please_input_phone_num"
                android:textColorHint="@color/login_edittext_hint"/>

            <ImageView
                android:id="@+id/loginImagePhoneDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/login_icon_delete"
                android:visibility="gone"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/helpPasswordImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/login_icon_lock"/>

            <EditText
                android:id="@+id/password"
                style="@style/SignEditText.Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/helpPasswordImage"
                android:hint="@string/please_input_password"
                android:textColorHint="@color/login_edittext_hint"/>

            <ImageView
                android:id="@+id/loginImagePasswordType"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/login_btn_password_type"
                android:visibility="gone"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <TextView
            android:id="@+id/signInButton"
            style="@style/PrimaryRedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/sign_in"/>

        <TextView
            android:id="@+id/signUpButton"
            style="@style/PrimaryRedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_register_bg_translate"
            android:text="@string/sign_up_free"
            android:textColor="#0E2947"/>

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/forget_password"
            android:textColor="#358CF3"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
