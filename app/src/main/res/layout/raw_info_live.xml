<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/splitBlockLight"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin">


    <LinearLayout
        android:id="@+id/leadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contentFather"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="0.5dp"
            android:layout_height="36dp"
            android:background="@color/lucky"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lucky"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_news_pic_point"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lucky"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contentFather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/leadLine"
        android:orientation="vertical"
        android:paddingLeft="5dp">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/common_margin"
            android:text="@string/time"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time">

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_left_white"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_toRightOf="@+id/arrow"
                android:background="@drawable/bg_info_live_white"
                android:paddingBottom="12dp"
                android:paddingLeft="@dimen/padding_ten"
                android:paddingRight="@dimen/padding_ten"
                android:paddingTop="12dp"
                android:text="dsakjdljsalkdjkasdjlaskdjalskdjlsakjdslkajdlkajdlkajdlkajdlkjakldjsalkjdslkajdlksajldkjalkdjlakjdlkadjsdjklsajdkljadkljkdsajlkdjaslk"
                android:textColor="@color/blackPrimary"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>