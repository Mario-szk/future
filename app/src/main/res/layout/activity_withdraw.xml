<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jnhyxx.html5.activity.account.WithdrawActivity">

    <com.jnhyxx.html5.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:rightText="@string/withdraw_log"
        app:rightTextColor="#FEFEFE"
        app:rightTextSize="14sp"
        app:rightVisible="true"
        app:titleText="@string/withdraw" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluePrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="25dp"
            android:text="@string/account_balance"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:text="@string/zero"
            android:textColor="#FB4B55"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bankcardNotFilledArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_withdraw"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/addBankcardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_withdraw_addcard"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="13dp"
            android:text="@string/add_bank_card"
            android:textColor="#A8A8A8"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bankcardInfoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/bank_name_card_number" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_money"
            android:drawablePadding="5dp"
            android:hint="@string/withdraw_least_money_hint"
            android:text="1551515115"
            android:textColor="#262626"
            android:textColorHint="#CBCBCB" />
