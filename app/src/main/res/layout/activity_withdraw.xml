<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jnhyxx.html5.activity.account.WithdrawActivity">

    <com.jnhyxx.html5.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:rightText="@string/withdraw_log"
        app:rightTextColor="#FEFEFE"
        app:rightTextSize="14sp"
        app:rightVisible="true"
        app:titleText="@string/withdraw"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluePrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="25dp"
            android:text="@string/mine_balance"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="25dp"
            android:text="@string/zero"
            android:textColor="@color/redPrimary"
            android:textSize="50sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bankcardNotFilledArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_withdraw"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/addBankcardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_withdraw_addcard"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="13dp"
            android:text="@string/add_bank_card"
            android:textColor="@color/colorDisable"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bankcardInfoArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/withdrawBankcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="5dp"
            tools:text="@string/default_bank_name_card_number"/>

        <EditText
            android:id="@+id/withdrawAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_money"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:hint="@string/withdraw_least_money_hint"
            android:paddingBottom="5dp"
            android:textColor="#262626"
            android:textColorHint="@color/grayHint"
            android:textSize="16sp"/>

        <include layout="@layout/split_line_blue_primary"/>

        <TextView
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_blue"
            android:clickable="true"
            android:enabled="false"
            android:gravity="center"
            android:padding="13sp"
            android:text="@string/ok"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:text="@string/warm_hint"
        android:textColor="@color/redPrimary"
        android:textSize="12sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/prompt_withdraw"
            android:textColor="@color/colorDisable"
            android:textSize="12sp"/>
    </ScrollView>

</LinearLayout>
