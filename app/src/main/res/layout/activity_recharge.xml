<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jnhyxx.html5.activity.account.RechargeActivity">

    <com.jnhyxx.html5.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/recharge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_view_margin"
        android:paddingRight="@dimen/common_view_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/recharge_amount"
            android:textColor="#262626" />

        <EditText
            android:textColorHint="@color/editText_hint_color"
            android:id="@+id/rechargeAmount"
            style="@style/SignEditText"
            android:textColor="@color/editText_color_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_recharge_amount"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/common_view_margin"
        android:layout_marginRight="@dimen/common_view_margin"
        android:background="@color/splitLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_view_margin"
        android:paddingRight="@dimen/common_view_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/please_choose_payment"
            android:textColor="#a8a8a8" />


        <RelativeLayout
            android:id="@+id/bankCardPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_withdraw"
            android:clickable="true">

            <ImageView
                android:id="@+id/helpIcBankCardPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_bank_card_pay" />

            <TextView
                android:id="@+id/helpBankCardPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/helpIcBankCardPay"
                android:paddingTop="10dp"
                android:text="@string/bank_card_pay"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/helpBankCardPay"
                android:layout_toRightOf="@+id/helpIcBankCardPay"
                android:paddingTop="8dp"
                android:text="@string/bank_card_pay_hint"
                android:textColor="#a8a8a8"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_superscript_recommend" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aliPayPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_withdraw"
            android:clickable="true">

            <ImageView
                android:id="@+id/helpIcAliPayPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_alipay" />

            <TextView
                android:id="@+id/helpAliPayPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/helpIcAliPayPay"
                android:paddingTop="10dp"
                android:text="@string/aliPay_pay"
                android:textColor="#262626"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/helpAliPayPay"
                android:layout_toRightOf="@+id/helpIcAliPayPay"
                android:paddingTop="8dp"
                android:text="@string/aliPay_pay_hint"
                android:textColor="#a8a8a8"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_superscript_recommend" />
        </RelativeLayout>

        <TextView
            android:id="@+id/nextStepButton"
            style="@style/PrimaryBigButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:enabled="false"
            android:text="@string/next_step" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_pingan"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/account_fund_is_covered_by_PA"
            android:textColor="#FB4B55"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:text="@string/recharge_hint"
        android:textColor="#A8A8A8" />
</LinearLayout>
