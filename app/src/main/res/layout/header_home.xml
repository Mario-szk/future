<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_with_gray_bottom_border"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_exclamation_marker"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"/>

        <ViewSwitcher
            android:id="@+id/viewSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/simulation"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_service"
            android:text="@string/simulation"/>

        <TextView
            android:id="@+id/paidToPromote"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_paid_to_promote"
            android:text="@string/paid_to_promote"/>

        <TextView
            android:id="@+id/investCourse"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_invest_course"
            android:text="@string/invest_course"/>

        <TextView
            android:id="@+id/newerVideo"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_newer_video"
            android:text="@string/newer_video"/>
    </LinearLayout>

</LinearLayout>