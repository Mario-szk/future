<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                    android:layout_height="@dimen/trade_header_height"
                android:background="@color/bluePrimary"
                android:padding="16dp">

    <TextView
        android:id="@+id/totalProfitAndUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/prompt_unlogin_unable_to_trade"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_blue_trade_page"
        android:gravity="center"
        android:minWidth="@dimen/trade_header_btn_width"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/sign_in"
        android:textColor="@android:color/white"/>
</RelativeLayout>