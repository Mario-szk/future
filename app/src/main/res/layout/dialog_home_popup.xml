<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialogHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dialog_header_home_popup"/>

            <TextView
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignRight="@+id/dialogHeader"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingTop="25dp"
            android:textColor="@color/blackPrimary"
            android:textSize="16sp"
            tools:text="此处是标题"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:lineSpacingExtra="10dp"
            android:maxLines="4"
            android:minHeight="130dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            tools:text="1.为了您的账户资金安全,只能绑定持卡人本人的银行卡,\n 2获取更多帮助,请联系客服~\n 2获取更多帮助,请联系客服~"/>
    </LinearLayout>

    <TextView
        android:id="@+id/checkDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dialog_single_assist_blue"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/check_detail"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>