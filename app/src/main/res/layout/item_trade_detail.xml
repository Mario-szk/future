<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tvTradeDetailYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="2012/12/12" />

    <TextView
        android:id="@+id/tvTradeDetailHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTradeDetailYear"
        android:paddingLeft="10dp"
        android:text="8:18:12" />

    <View
        android:id="@+id/helpLine"
        android:layout_width="1px"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvTradeDetailYear"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/tvDataType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/helpLine"
        android:background="@drawable/bg_buy_volume"
        android:padding="10dp"
        android:text="数据类型" />

    <TextView
        android:id="@+id/tvTradeDetailType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tvDataType"
        android:text="美原油"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tradeDetailGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="1251分"
        android:textColor="@android:color/holo_red_light" />
</RelativeLayout>