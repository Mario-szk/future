<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/splitBlockLight"
              android:paddingLeft="@dimen/common_margin"
              android:paddingRight="@dimen/common_margin">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:background="@color/splitLineGrayLight"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/splitLineGrayLight"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_news_pic_point"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/splitLineGrayLight"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/common_margin"
            android:text="@string/time"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/time"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_left_white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_info_live_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_ten"
                android:paddingRight="@dimen/padding_ten">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/time"
                    android:layout_toRightOf="@+id/arrow"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="打快点进卡就发了思考几分阿里sfjkahkfjjhsakfhkasfhksjafhkjl睡觉爱疯了快速减肥了快速减肥了看见爱上了分开就算了卡积分发发看见爱上了开房间爱离开房间龙卡及福利卡收费就离开房间挨了福克斯就是浪费空间分开了撒减肥了凯撒减肥了卡斯就疯了卡机发送旅客撒酒疯卢卡斯放假了咖啡洒就看了撒娇疯了快睡觉离开福建爱上福利卡就是法拉克就发了会计法拉克将法拉克减肥了卡斯就疯了开发撒酒疯了卡斯就疯了凯撒解放路口"
                    android:textColor="@color/blackPrimary"/>

                <LinearLayout
                    android:id="@+id/dataLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/beforeData"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorDisable"
                        android:textSize="@dimen/min_text_size"
                        tools:text="前值:12"/>

                    <TextView
                        android:id="@+id/expectData"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorDisable"
                        android:textSize="@dimen/min_text_size"
                        tools:text="预期:12"/>

                    <TextView
                        android:id="@+id/realData"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorDisable"
                        android:textSize="@dimen/min_text_size"
                        tools:text="实际:12"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageHint"
                    android:layout_width="117dp"
                    android:layout_height="74dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>