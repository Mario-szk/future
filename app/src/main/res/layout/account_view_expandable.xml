<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/viewExpandableHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/leftTxtView"
            style="@style/AboutAsEntryLeftTextViewStyle"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/ivAboutUsRight"
            style="@style/AboutAsEntryRightImageViewStyle"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/bottomTxt"
        style="@style/AboutAsEntryBottomTextViewStyle"/>

</LinearLayout>