<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/countryBanner"
            android:layout_width="24dp"
            android:layout_height="17dp"
            android:minHeight="17dp"
            android:minWidth="24dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/colorDisable"
            android:textSize="13sp"
            tools:text="哈哈哈哈哈"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lidoNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_red"
            android:gravity="center"
            android:minHeight="18dp"
            android:minWidth="70dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/redPrimary"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/badNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_green"
            android:gravity="center"
            android:minHeight="18dp"
            android:minWidth="70dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/greenPrimary"
            android:textSize="10sp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:textColor="@color/blackPrimary"
        android:textSize="16sp"
        tools:text="加拿大至11月18日全国经济指数"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp">

        <TextView
            android:id="@+id/beforeData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lucky"
            android:textSize="13sp"
            tools:text="前值:2000"/>

        <TextView
            android:id="@+id/expectData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lucky"
            android:textSize="13sp"
            tools:text="预期值:2000"/>

        <TextView
            android:id="@+id/publishData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lucky"
            android:textSize="13sp"
            tools:text="公布值:2000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/reviseBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:textColor="@color/colorDisable"
        android:textSize="10sp"
        android:visibility="gone"
        tools:text="修正前(:4848)"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/splitLineGrayLight"/>
</LinearLayout>