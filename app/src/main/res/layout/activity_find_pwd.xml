<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.account.FindPwdActivity">

    <com.jnhyxx.html5.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:backFeature="true"
        app:titleText="@string/find_password" />

    <include layout="@layout/split_line_thick" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <!--
                        <TextView
                            style="@style/InputTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number" />

                        <EditText
                            android:id="@+id/phoneNum"
                            style="@style/SignEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/please_input_phone_num" />-->



            <EditText
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/login_icon_phone"
                android:layout_centerVertical="true"
                android:id="@+id/findPasswordPhoneNum"
                style="@style/SignEditText.PhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/helpPhoneNumImage"
                android:hint="@string/please_input_phone_num"
                android:textColorHint="@color/grayHint" />

        </RelativeLayout>

        <include layout="@layout/split_line_thick" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <!--      <TextView

                      style="@style/InputTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/message_auth_code" />

                  <EditText
                      android:id="@+id/messageAuthCode"
                      style="@style/SignEditText"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:hint="@string/please_input_msg_auth_code"
                      android:inputType="phone"
                      android:maxLength="4" />

                  <TextView
                      android:id="@+id/obtainAuthCode"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:background="@drawable/btn_obtain_auth_code"
                      android:clickable="true"
                      android:enabled="false"
                      android:gravity="center"
                      android:minWidth="85dp"
                      android:paddingLeft="6dp"
                      android:paddingRight="6dp"
                      android:text="@string/obtain_auth_code"
                      android:textColor="@android:color/white"
                      android:textSize="13sp" />-->


            <EditText
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/login_icon_code"
                android:layout_centerVertical="true"
                android:id="@+id/findPasswordMessageAuthCode"
                style="@style/SignEditText.PhoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/help_messageAuthCode"
                android:hint="@string/please_input_msg_auth_code"
                android:textColorHint="@color/grayHint" />

            <TextView
                android:id="@+id/obtainAuthCode"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_obtain_auth_code"
                android:clickable="true"
                android:enabled="false"
                android:gravity="center"
                android:minWidth="85dp"
                android:text="@string/obtain_auth_code"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/split_line_thick" />

    <TextView
        android:id="@+id/nextStepButton"
        style="@style/PrimaryBigButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:text="@string/next_step" />

</LinearLayout>
