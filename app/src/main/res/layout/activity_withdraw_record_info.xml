    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_view_margin"
        android:paddingRight="@dimen/common_view_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdraw_record_number_hint"/>

            <TextView
                android:id="@+id/moneyNumber"
                style="@style/withDrawInfoRightText"
                android:layout_alignParentRight="true"
                android:text="@string/withdraw_record_number"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdraw_record_status"/>

            <TextView
                android:id="@+id/withdrawStatus"
                style="@style/withDrawInfoRightText"
                android:layout_alignParentRight="true"
                android:text="@string/withdraw_record_status"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdraw_record_real_account_hint"/>

            <TextView
                android:id="@+id/realAccount"
                style="@style/withDrawInfoRightText"
                android:layout_alignParentRight="true"
                android:text="@string/withdraw_record_real_account"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdraw_record_poundage_hint"/>

            <TextView
                android:id="@+id/poundageNumber"
                style="@style/withDrawInfoRightText"
                android:layout_alignParentRight="true"
                android:text="@string/withdraw_record_poundage"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdraw_record_bank_hint"/>

            <TextView
                android:id="@+id/bankName"
                style="@style/withDrawInfoRightText"
                android:layout_alignParentRight="true"
                android:text="@string/withdraw_record_bank"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/withdraw_record_time"/>

            <TextView
                android:id="@+id/time"
                style="@style/withDrawInfoRightText"
                android:layout_alignParentRight="true"
                android:text="@string/withdraw_record_time"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/withdraw_record_account_time"/>

            <TextView
                android:id="@+id/accountTime"
                style="@style/withDrawInfoRightText"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/accountTimeHint"
                android:layout_width="@dimen/drawable_left_padding"
                android:layout_height="1dp"
                android:background="@color/blueAssist"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
