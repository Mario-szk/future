    <RelativeLayout
        android:clickable="true"
        android:id="@+id/messageCenter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:paddingBottom="1dp"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/account_image_help_message"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/account_list_icon_news" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/account_image_help_message"
            android:paddingLeft="16dp"
            android:text="@string/message_center"
            android:textColor="@color/account_center_text" />

        <TextView
            android:id="@+id/account_tv_message_number"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="43dp"
            android:layout_toLeftOf="@+id/account_image_help_message_arrow"
            android:background="@drawable/account_message_warm" />

        <ImageView
            android:id="@+id/account_image_help_message_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:src="@drawable/common_big_arrow_list_icon_more" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/fundDetail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:paddingBottom="1dp"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/account_image_help_fundDetail"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/account_list_icon_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/account_image_help_fundDetail"
            android:paddingLeft="16dp"
            android:text="@string/account_trade_info"
            android:textColor="@color/account_center_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:src="@drawable/common_big_arrow_list_icon_more" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/paidToPromote"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:paddingBottom="1dp"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/account_image_help_paidToPromote"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/account_list_icon_brand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/account_image_help_paidToPromote"
            android:paddingLeft="16dp"
            android:text="@string/paid_to_promote"
            android:textColor="@color/account_center_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:src="@drawable/common_big_arrow_list_icon_more" />
    </RelativeLayout>

    <include layout="@layout/split_line" />

    <RelativeLayout
        android:clickable="true"
        android:id="@+id/personalInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:paddingBottom="1dp"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/account_image_help_personalInfo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/account_list_icon_aboutus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/account_image_help_personalInfo"
            android:paddingLeft="16dp"
            android:text="@string/account_aboutus"
            android:textColor="@color/account_center_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"
            android:src="@drawable/common_big_arrow_list_icon_more" />
    </RelativeLayout>
