    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF0F5"
    android:orientation="vertical"
    tools:context="com.jnhyxx.html5.fragment.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/account_mine_header_bg"
        android:orientation="vertical">

        <com.jnhyxx.html5.view.TitleBar
            android:background="@android:color/transparent"
            android:id="@+id/fragmentAccountTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rightVisible="true"
            app:rightImage="@drawable/account_nav_icon_setting" />
      <!--  <RelativeLayout
            android:layout_width="match_parent"
