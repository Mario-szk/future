<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_nick_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jnhyxx.html5.activity.setting.ModifyNickNameActivity">

    <com.jnhyxx.html5.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/modify_nick_name_title" />

    <include layout="@layout/common_fail_warn"
        android:id="@+id/modifyNickNameFailWarnWarn"
        android:visibility="gone"/>

    <LinearLayout style="@style/settingLinearLayout">

        <TextView
            style="@style/settingTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="@string/modify_nick_name"
            android:textColor="#262626" />

        <EditText
            android:id="@+id/etModifyNickName"
            style="@style/settingEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/modify_nick_name_editText_hint"
            android:maxLength="16"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:text="@string/modify_nick_name_warn"
        android:textColor="#FB4B55"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/submitNickName"
        style="@style/PrimaryRedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="17sp" />
</LinearLayout>
