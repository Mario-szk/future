            <ImageView
                android:id="@+id/help_messageAuthCode"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/login_icon_code" />

            <EditText
                android:id="@+id/activityRegisterMessageAuthCode"
                style="@style/SignEditText.PhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/help_messageAuthCode"
                android:hint="@string/please_input_msg_auth_code"
                android:textColorHint="@color/login_edittext_hint" />

            <TextView
                android:id="@+id/obtainAuthCode"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_obtain_auth_code"
                android:clickable="true"
                android:enabled="false"
                android:gravity="center"

                android:text="@string/obtain_auth_code"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <include layout="@layout/split_line_thick" />

