            <ImageView
                android:id="@+id/help_RetrieveImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_login_image_code" />

            <EditText
                android:id="@+id/etRegisterRetrieveImage"
                style="@style/SignEditText.PhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/help_RetrieveImage"
                android:hint="@string/register_code_image_hint"
                android:textColorHint="@color/login_edittext_hint" />

            <TextView
                android:id="@+id/tvRegisterRetrieveImage"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/etRegisterRetrieveImage"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/register_code_image"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivRegisterRetrieveImage"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/etRegisterRetrieveImage"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/register_code_image"
