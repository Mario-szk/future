<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jnhyxx.html5.activity.account.SignUpActivity">

    <com.jnhyxx.html5.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:rightImage="@drawable/bg_account_register_right_shape"
        app:rightText="@string/sign_in"
        app:rightTextColor="@color/account_top_blue_text"
        app:rightTextSize="12sp"
        app:rightVisible="true"
        app:titleText="@string/sign_up_free"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.jnhyxx.html5.view.CommonFailWarn
            android:id="@+id/failWarn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            app:visible="false"/>

        <EditText
            android:id="@+id/phoneNum"
            style="@style/SignEditText.PhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/common_view_margin"
            android:layout_marginRight="@dimen/common_view_margin"
            android:drawableLeft="@drawable/login_icon_phone"
            android:drawablePadding="@dimen/common_view_margin"
            android:hint="@string/please_input_phone_num"
            android:textColorHint="@color/grayHint"
            android:textSize="@dimen/mine_editTest_size"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_view_margin"
        android:paddingRight="@dimen/common_view_margin">

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/registerAuthCode"
                style="@style/SignEditText.PhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/login_icon_code"
                android:drawablePadding="@dimen/common_view_margin"
                android:hint="@string/please_input_msg_auth_code"
                android:textColorHint="@color/grayHint"
                android:textSize="@dimen/mine_editTest_size"/>

            <TextView
                android:id="@+id/obtainAuthCode"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_obtain_auth_code"
                android:clickable="true"
                android:enabled="false"
                android:gravity="center"

                android:text="@string/obtain_auth_code"
                android:textColor="@android:color/white"
                android:textSize="13sp"/>
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>

        <RelativeLayout
            android:id="@+id/imageCode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/registerRetrieveIma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/ic_login_image_code"
                android:drawablePadding="@dimen/drawable_left_padding"
                android:hint="@string/register_code_image_hint"
                android:textColorHint="@color/grayHint"
                android:textSize="@dimen/mine_editTest_size"
                />


            <ImageView
                android:id="@+id/RetrieveImageCode"
                android:layout_width="85dp"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/mine_view_bottom_radius"
                android:src="@mipmap/ic_launcher"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/showPasswordButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:src="@drawable/login_btn_password_type"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/password"
                style="@style/SignEditText.Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/showPasswordButton"
                android:drawableLeft="@drawable/login_icon_lock"
                android:drawablePadding="@dimen/common_view_margin"
                android:hint="@string/please_input_password"
                android:textColorHint="@color/grayHint"
                android:textSize="@dimen/mine_editTest_size"
                />
        </RelativeLayout>

        <include layout="@layout/split_line_thick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/agreeProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="@string/read_and_agreed"
            android:textColor="#666666"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/serviceProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/service_protocol"
            android:textColor="#147AEB"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/signUpButton"
        style="@style/PrimaryBigButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:text="@string/sign_up_free"/>

</LinearLayout>
