                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/login_icon_phone" />

            <EditText
                android:id="@+id/activityRegisterPhoneNum"
                style="@style/SignEditText.PhoneNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/helpPhoneNumImage"
                android:hint="@string/please_input_phone_num"
                android:textColorHint="@color/login_edittext_hint" />
        </RelativeLayout>

        <include layout="@layout/split_line_thick" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

