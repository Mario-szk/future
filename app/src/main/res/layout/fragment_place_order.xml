<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="vertical"
              tools:context=".fragment.order.PlaceOrderFragment">

    <View
        android:id="@+id/emptyClickArea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trade_header_height"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/marketCloseText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/bluePrimary"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="15sp"
        tools:text="@string/prompt_next_trade_time_is"/>

    <RelativeLayout
        android:id="@+id/marketOpenArea"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/bluePrimary"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lastPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/redPrimary"
            android:textSize="30sp"
            tools:text="45.89"/>

        <TextView
            android:id="@+id/priceChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/lastPrice"
            android:textColor="@color/redPrimary"
            android:textSize="11sp"
            tools:text="+0.15\n+0.33%"/>

        <com.jnhyxx.html5.view.BuySellVolumeLayout
            android:id="@+id/buySellVolumeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/priceChange"
            android:orientation="vertical"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluePrimary"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <View
            android:id="@+id/spiltLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/splitLineBlueLight"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:text="@string/trade_quantity"
                android:textColor="#A8A8A8"/>

            <com.jnhyxx.html5.view.OrderConfigurationSelector
                android:id="@+id/tradeQuantitySelector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                app:maximum="4"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/splitLineBlueLight"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:text="@string/touch_stop_loss"
            android:textColor="#A8A8A8"/>

        <com.jnhyxx.html5.view.OrderConfigurationSelector
            android:id="@+id/touchStopLossSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maximum="5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="12dp"
            android:text="@string/touch_stop_profit"
            android:textColor="#A8A8A8"/>

        <com.jnhyxx.html5.view.OrderConfigurationSelector
            android:id="@+id/touchStopProfitSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maximum="5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/splitLineBlueLight"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="@string/margin"
                android:textColor="#A8A8A8"/>

            <TextView
                android:id="@+id/margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:textColor="@color/blueAssist"
                android:textSize="12sp"
                tools:text="HK$16000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="@string/trade_fee"
                android:textColor="#A8A8A8"/>

            <TextView
                android:id="@+id/tradeFee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:textColor="@color/blueAssist"
                android:textSize="12sp"
                tools:text="HK$1000"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/rateAndMarketTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_market_time_status"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="#808080"
        android:textSize="11sp"
        tools:text="汇率换算: 1美元=6.8元, 持仓时间至凌晨5:00"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bluePrimary"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/total_to_be_paid"
            android:textColor="#A8A8A8"/>

        <TextView
            android:id="@+id/totalTobePaid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:textColor="@color/blueAssist"
            android:textSize="16sp"
            tools:text="¥ 14620 "/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tradeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lastBidAskPriceBg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/redPrimary"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="@string/last_bid_ask_price"
                android:textColor="#B3FFFFFF"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/lastBidAskPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="—"
                android:textColor="@android:color/white"
                android:textSize="17sp"/>
        </LinearLayout>

        <View
            android:id="@+id/bottomSplitLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FD6C73"/>

        <TextView
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_red_primary"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            tools:text="@string/confirm_buy_long"/>
    </LinearLayout>
</LinearLayout>
