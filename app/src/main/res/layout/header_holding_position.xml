<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/trade_header_height"
                android:background="@color/bluePrimary"
                android:padding="16dp">

    <TextView
        android:id="@+id/totalProfitAndUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/holding_position_total_profit_and_unit"
        android:textColor="#CCCCCC"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalProfitAndUnit"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/totalProfit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="+0"
            android:textColor="@color/redPrimary"
            android:textSize="35sp"/>

        <TextView
            android:id="@+id/oneKeyClosePositionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_trade_page"
            android:gravity="center"
            android:minWidth="@dimen/trade_header_btn_width"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/one_key_close_position"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>