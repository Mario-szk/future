<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <com.jnhyxx.html5.view.InfiniteViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.jnhyxx.html5.view.PageIndicator
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            app:infinite="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_with_gray_bottom_border"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/futuresRiskTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_futures_rick_tips"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_exclamation_marker"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="2dp"
            android:textColor="@color/redPrimary"
            android:textSize="12sp"
            android:text="@string/futures_risk_tips"/>

        <ViewSwitcher
            android:id="@+id/viewSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/paidToPromote"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_paid_to_promote"
            android:text="@string/paid_to_promote"/>

        <TextView
            android:id="@+id/investCourse"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_invest_course"
            android:text="@string/invest_course"/>

        <TextView
            android:id="@+id/newerVideo"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_newer_video"
            android:text="@string/newer_video"/>

        <TextView
            android:id="@+id/contactService"
            style="@style/HomeListHeaderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressable"
            android:drawableTop="@drawable/ic_service"
            android:text="@string/contact_service"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/simulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_simulate_enter">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_simulate"
            android:drawablePadding="10dp"
            android:text="@string/simulation"
            android:textColor="#0E2947"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/holdingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_red_primary"
            android:textSize="13sp"
            android:gravity="center"
            android:minHeight="20dp"
            android:minWidth="64dp"
            android:text="@string/enter_right_now"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</LinearLayout>